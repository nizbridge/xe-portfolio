<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.2">
	<title xml:lang="ko">XE Portfolio type Template</title>
    <description xml:lang="ko">XE Portfolio type Template v1.04</description>
	<version>1.04</version>
	<date>2015-09-01</date>
	<author email_address="nizbridge@gmail.com">
		<name xml:lang="ko">nizbridge</name>
	</author>
	<extra_vars>
		<group>
			<title xml:lang="ko">레이아웃</title>
				<var name="color_set" type="select">
					<title xml:lang="ko">컬러셋</title>
					<description xml:lang="ko">레이아웃의 컬러셋을 설정합니다.</description>
					<options value="">
					<title xml:lang="ko">Orange</title></options>
					<options value="color_tm2">
					<title xml:lang="ko">Blue</title></options>
					<options value="color_tm3">
					<title xml:lang="ko">White</title></options>
				</var>
                <var name="sub_ly_color" type="text">
                    <title xml:lang="ko">서브페이지 컨텐츠 배경색</title>
					<description xml:lang="ko">서브페이지의 컨텐츠영역 배경색을 입력하세요.(# 제외)</description>
                </var>
				<var name="sub_ly_color_img" type="image">
                    <title xml:lang="ko">서브페이지 컨텐츠 배경이미지(800x681)</title>
					<description xml:lang="ko">서브페이지의 컨텐츠영역 배경이미지를 선택하세요.(배경색을 사용 안할 경우)</description>
                </var>
				<var name="sub_body_color" type="text">
                    <title xml:lang="ko">서브페이지 뒷배경 색상</title>
					<description xml:lang="ko">서브페이지의 BODY영역의 배경색을 입력하세요.(# 제외)</description>
                </var>
				<var name="sub_body_color_img" type="image">
                    <title xml:lang="ko">서브페이지 뒷배경 이미지</title>
					<description xml:lang="ko">서브페이지의 BODY영역의 배경이미지를 선택하세요.(배경색을 사용 안할 경우)</description>
                </var>
				<var name="body_bg_right_set" type="select">
					<title xml:lang="ko">빗금무늬</title>
					<description xml:lang="ko">화면 오른쪽의 빗금무늬의 노출여부를 설정합니다.</description>
					<options value="on">
					<title xml:lang="ko">ON</title></options>
					<options value="off">
					<title xml:lang="ko">OFF</title></options>
				</var>
		</group>
		<group>
			<title xml:lang="ko">로고</title>
				<var name="logo_url" type="text">
					<title xml:lang="ko">로고 링크</title>
					<description xml:lang="ko">로고 클릭시 이동 url (미입력시 메인으로 이동)</description>
				</var>
				<var name="logo_image_alt" type="text">
					<title xml:lang="ko">로고이미지 대체문자</title>
					<description xml:lang="ko">레이아웃의 상단에 표시될 로고이미지 대체문자(alt)를 입력하세요</description>
				</var>
				<var name="logo_img" type="image">
					<title xml:lang="ko">로고 이미지</title>
					<description xml:lang="ko">로고로 사용할 이미지를 첨부해주세요</description>
				</var>
				<var name="logo_img_h" type="text">
					<title xml:lang="ko">로고 이미지 높이</title>
					<description xml:lang="ko">로고 이미지 높이를 설정해주세요 (미입력시 로고 원본 사이즈 적용)</description>
				</var>
				<var name="logo_img_w" type="text">
					<title xml:lang="ko">로고 이미지 넓이</title>
					<description xml:lang="ko">로고 이미지 넓이를 설정해주세요 (미입력시 로고 원본 사이즈 적용)</description>
				</var>
		</group>
		<group>
			<title xml:lang="ko">이미지 슬라이더</title>
				<var name="slider1_image" type="image">
					<title xml:lang="ko">이미지1</title>
				</var>
				<var name="slider1_description_en" type="text">
					<title xml:lang="ko">이미지1 영문</title>
				</var>
				<var name="slider1_description_kr" type="text">
					<title xml:lang="ko">이미지1 한글</title>
				</var>
				<var name="slider2_image" type="image">
					<title xml:lang="ko">이미지2</title>
				</var>
				<var name="slider2_description_en" type="text">
					<title xml:lang="ko">이미지2 영문</title>
				</var>
				<var name="slider2_description_kr" type="text">
					<title xml:lang="ko">이미지2 한글</title>
				</var>
                <var name="slider3_image" type="image">
					<title xml:lang="ko">이미지3</title>
				</var>
				<var name="slider3_description_en" type="text">
					<title xml:lang="ko">이미지3 영문</title>
				</var>
				<var name="slider3_description_kr" type="text">
					<title xml:lang="ko">이미지3 한글</title>
				</var>
                <var name="slider4_image" type="image">
					<title xml:lang="ko">이미지4</title>
                </var>
				<var name="slider4_description_en" type="text">
					<title xml:lang="ko">이미지4 영문</title>
				</var>
				<var name="slider4_description_kr" type="text">
					<title xml:lang="ko">이미지4 한글</title>
				</var>
		</group>
        <group>
			<title xml:lang="ko">메뉴 아이콘</title>
                <var name="gnb_menu_icon1" type="text">
                    <title xml:lang="ko">아이콘 배열</title>
					<description xml:lang="ko">메뉴 앞에 표시될 XE아이콘 명을 나열하세요. 구분은 콤마(,)로 해야 합니다.</description>
				</var>
        </group>
        <group>
            <title xml:lang="ko">copyright/support</title>
                <var name="href_copy_txt" type="text">
                    <title xml:lang="ko">copyright 문구</title>
                    <description xml:lang="ko">footer에 노출될 copyright를 입력하세요.</description>
				</var>
                <var name="href_copy" type="text">
                    <title xml:lang="ko">copyright 링크</title>
                    <description xml:lang="ko">copyright 클릭시 연결될 사이트 주소를 입력하세요.</description>
				</var>
                <var name="href_supt_txt" type="text">
                    <title xml:lang="ko">support 문구</title>
                    <description xml:lang="ko">footer에 노출될 support를 입력하세요.</description>
				</var>
                <var name="href_supt" type="text">
                    <title xml:lang="ko">support 링크</title>
                    <description xml:lang="ko">support 클릭시 연결될 사이트 주소를 입력하세요.</description>
				</var>
        </group>
    </extra_vars>
 
    <menus>
        <menu name="main_menu" maxdepth="3" default="true">
            <title xml:lang="ko">상단 메뉴</title>
        </menu>
		<menu name="bottom_menu" maxdepth="2" default="true">
            <title xml:lang="ko">하단 메뉴</title>
        </menu>
    </menus>
</layout>
 